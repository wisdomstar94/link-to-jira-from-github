{
  "manifest_version": 3,
  "version": "1.0.1",
  "short_name": "Github To Jira",
  "name": "Github To Jira",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["content-scripts/github-script.css"],
      "js": ["content-scripts/github-script.js"]
    }
  ]
}
